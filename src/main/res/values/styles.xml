<resources>

    <!-- Base application theme. -->

    <style name="AppMaterialTheme" parent="SuperMaterialTheme">
        <!-- Theme for API <21 -->

    </style>

    <style name="SuperMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Theme for all devices, all API -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/ubuntu/Ubuntu-Regular.ttf</item>
    </style>

    <style name="EditTextTheme" parent="SuperMaterialTheme">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="TextViewTheme" parent="SuperMaterialTheme">
        <item name="android:textColor">@color/colorPrimaryDark2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="MyCheckBox" parent="SuperMaterialTheme">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="pin_edittext_style" parent="SuperMaterialTheme">
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:maxLength">1</item>
        <item name="android:minEms">2</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="MyCardViewStyle" parent="SuperMaterialTheme">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPaddingBottom">10dp</item>
        <item name="contentPaddingTop">10dp</item>
        <item name="contentPaddingLeft">10dp</item>
        <item name="contentPaddingRight">10dp</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
