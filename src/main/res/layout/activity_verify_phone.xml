<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.csa.cashsasa.controller.VerifyPhoneActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/limit_scroll_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/verify_scroll"
        tools:ignore="MissingConstraints"
        android:background="@color/colorPrimary"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <ImageView
                android:id="@+id/reg_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_assignment_ind_black_24dp"
                android:tint="@color/whiteColor" />

            <TextView
                android:id="@+id/loan_limit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_pic"
                android:layout_centerHorizontal="true"
                android:text="@string/phone_confirm"
                android:textStyle="bold"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/text_size"
                />

        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/verify_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_above="@id/progress_delay"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            >


            <TextView
                android:id="@+id/verify_text_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="@string/phone_confirm_info"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/margin_between"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="@dimen/margin_right"
                android:layout_marginStart="@dimen/margin_left" />

            <TextView
                android:id="@+id/verify_text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/verify_text_info"
                android:layout_marginTop="50dp"
                android:textColor="@color/colorAccent"
                android:text="+254711259995"
                android:textSize="@dimen/text_size"
                android:layout_marginEnd="@dimen/margin_right"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginLeft="@dimen/margin_left" />

        </RelativeLayout>
    </ScrollView>


    <TextView
        android:id="@+id/account_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_phone"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/colorPrimaryDark2"
        android:textStyle="bold"
        android:layout_above="@id/progress_delay"
        android:layout_centerHorizontal="true"
        />

    <ProgressBar
        android:id="@+id/progress_delay"
        android:theme="@style/ProgressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_left"
        android:layout_marginEnd="@dimen/margin_left"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:max="100"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        />


</RelativeLayout>



